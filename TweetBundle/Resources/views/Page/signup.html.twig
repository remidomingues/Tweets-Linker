<!DOCTYPE html>
<html>
  <head>
    <title>TweetsLinker - Sign up ! </title>
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <div class="brand">TweetsLinker</div> 
              <form class="navbar-form pull-right">
                <button class="btn" type="button" onclick="location.href='login';">Sign in !</button>
              </form>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="hero-unit">
          <h1>Sign up !</h1>
          <div class="row">
            <div class="span4">
              <br/>
              {{error}}
              <div class="well">
                <form method="post" {{ form_enctype(form) }}>
                  {{ form_widget(form) }}
                  <input type="submit" class="btn btn-primary" />
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
  </body>
</html>
